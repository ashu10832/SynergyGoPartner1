<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    android:verticalScrollbarPosition="right">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".Res1Act">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:text="Vehicle Seen"
        android:id="@+id/textView52" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.00"
        android:id="@+id/Vehiclespinner"
        />
</LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Registeration No."
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:id="@+id/RegNoeditText" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Carpet Area"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:inputType="number"
        android:id="@+id/CarpetAreaeditText"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Political Influence"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:id="@+id/PoliticaleditText" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Other Remarks"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:inputType="textMultiLine"
        android:id="@+id/OtherRemarkseditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Finish"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ripple_1"
        android:layout_gravity="right"
        android:ems="8"
        android:id="@+id/Finishbtnsr"
        android:onClick="onClickFinishsr" />
</LinearLayout>
</ScrollView>