<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    android:verticalScrollbarPosition="right">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".Off1Act">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Name Of Person Contacted"/>
    <EditText
        android:id="@+id/personconteditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:inputType="textPersonName" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Designation of Person Contacted"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/desigPCeditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
         />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Mobile"

        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/mobPCeditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Date of Joining of Applicant"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/DateAppjoineditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:inputType="date" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Designation of Applicant"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/DesgAppeditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="No. of Years in Present Employment "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/yearseditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_style"
        android:inputType="number" />

    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/nxtso1btn"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:ems="8"
        android:textSize="16sp"
        android:background="@drawable/ripple_1"
        android:layout_height="wrap_content"
        android:onClick="onClickNextso1"
        android:text="Next" />
</LinearLayout>
    </ScrollView>